<div class="flex justify-center rounded-md p-4 mt-4"> 
  Reviews for <%= @chair.company %> <%= @chair.name %>
</div>

<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:grid lg:max-w-7xl lg:grid-cols-12 lg:gap-x-8 lg:px-8 lg:py-32">
    <div class="lg:col-span-4">
      <h2 class="text-2xl font-bold tracking-tight text-gray-900">Customer Reviews</h2>

      <div class="mt-3 flex items-center">
        <div>
          <div class="flex items-center">
            <!-- Active: "text-yellow-400", Default: "text-gray-300" -->
            <%= render "chair_reviews_stars" %>           
          </div>
          <p class="sr-only">4 out of 5 stars</p>
        </div>
        <p class="ml-2 text-sm text-gray-900">
          <%= @chair.average_rating %> stars based on <%= @chair.reviews.size %> reviews
        </p>
      </div>

      <div class="mt-6">
        <h3 class="sr-only">Review data</h3>

        <dl class="space-y-3">
          <%= render "chair_review_data" %>
          
        </dl>
      </div>

      <div class="mt-10">
        <h3 class="text-lg font-medium text-gray-900">Share your thoughts</h3>
        <p class="mt-1 text-sm text-gray-600">If youâ€™ve used this product, share your thoughts with other customers</p>

        <%= link_to "Write a review", new_chair_review_path(@chair), class: "mt-6 inline-flex w-full items-center justify-center rounded-md border border-gray-300 bg-white px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-50 sm:w-auto lg:w-full" %>
      </div>
    </div>

    <div class="mt-16 lg:col-span-7 lg:col-start-6 lg:mt-0">
      <h3 class="sr-only">Recent reviews</h3>

      
      <div class="flow-root">
        <div class="-my-12 divide-y divide-gray-200">
          <% @reviews.each do |review| %>
            <div class="py-12">
              <div class="flex items-center">
                <img src="https://images.unsplash.com/photo-1502685104226-ee32379fefbe?ixlib=rb-=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=256&h=256&q=80" alt="Emily Selman." class="h-12 w-12 rounded-full">
                <div class="ml-4">
                  <h4 class="text-sm font-bold text-gray-900"><%= review.name %></h4>
                  <div class="mt-1 flex items-center">
                    <%= render "chair_review_stars", review: review %>
                  </div>
                  <p class="sr-only">5 out of 5 stars</p>
                </div>
              </div>

              <div class="mt-4 space-y-6 text-base italic text-gray-600">
                <p><%= review.comment %></p>
                <%= link_to "Edit Review", edit_chair_review_path(@chair,review.id), class: form_field_button_classes%>
                <%= link_to "Delete Review", chair_review_path(@chair, review.id), data: { turbo_method: :delete, turbo_confirm: "Really?" }, class: form_field_button_classes %>
              </div>
            </div>
          <% end %>
          
          <!-- More reviews... -->
        </div>
        
      </div>
    </div>
  </div>
</div>
