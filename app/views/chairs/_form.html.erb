<%= simple_form_for chair, defaults: {label_html: {class: label_classes}} do |f| %>
  <%= f.input :name, label:"Chair name", error:"Name is required" %>
  <%= f.input :price, hint:"Must be greater than 0" %>
	<%= f.input :company, placeholder: "Amazon" %>
	<%= f.input :picture, input_html: {class: form_field_classes} %>
	<%= f.input :description, placeholder:"test" %>
	<%= f.input :available_from %>
  <%= f.button :submit %>
<% end %>